apiVersion: apps/v1
kind: Deployment
metadata:
  name: REPL_APP_NAME
  namespace: default
  labels:
    app: REPL_APP_NAME
spec:
  replicas: 1
  selector:
    matchLabels:
      app: REPL_APP_NAME
  template:
    metadata:
      labels:
        app: REPL_APP_NAME
    spec:
      containers:
      - name: REPL_CONTAINER_NAME
        image: REPL_IMAGE
        imagePullPolicy: IfNotPresent
---
apiVersion: v1
kind: Service
metadata:
  name: anj-entrypoint
  namespace: default
spec:
  type: NodePort
  selector:
    app: REPL_APP_NAME
  ports:
  - port: 8080
    targetPort: REPL_TARGET_PORT
    nodePort: REPL_NODE_PORT